<html>
  <head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <title>Scrabble</title>
  </head>
  <body>
      <h1 class="well text-center">Let's Play Scrabble!</h1>
      <div class="container">
          <form action="/results" method="post">
              <div class="row">
                  <h3>Enter your words below:</h3>
                  <div class="col-sm-6">
                      <div class="form-group">
                          <label for="player1Word">Player 1</label>
                          <input id="player1Word" name="player1Word" type="text" class="form-control">
                            <h4>Total Score: {{ player1.score }}</h4>
                      </div>
                  </div>
                  <div class="col-sm-6">
                      <div class="form-group">
                          <label for="player2Word">Player 2</label>
                          <input id="player2Word" name="player2Word" type="text" class="form-control">
                          <h4>Total Score: {{ player2.score }}</h4>
                      </div>
                  </div>
              </div>
              <button type="submit" class="btn btn-info">Play!</button>
          </form>
          <form action="/clear">
              <button type="submit" class="btn btn-warning">New Game!</button>
          </form>
      </div>
  </body>
</html>
